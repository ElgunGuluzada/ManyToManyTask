@model List<Book>
@{
    ViewData["Title"] = "Update";
    Layout = null;
}

@foreach (var item in Model)
{
   <div class="row">
    <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Update Book</h4>

                  <form class="forms-sample"  method="post" enctype="multipart/form-data">
                    <div class="form-group">
                      <label asp-for="@item.Name"></label>
                      <input asp-for="@item.Name" class="form-control"  placeholder="Name">
                      <span  class="text-danger" asp-validation-for="@item.Name"></span>
                    </div>

                    <div class="form-group">
                      <label asp-for="@item.Price" ></label>
                      <input asp-for="@item.Price"  class="form-control"  rows="4"></input>
                      <span class="text-danger" asp-validation-for="@item.Price"></span>
                    </div>

                     <label asp-for="@item.AuthorIds"></label>
                     <select asp-for="@item.AuthorIds" class="form-select" asp-items="@ViewBag.Authors"   aria-label="Default select example">
                    @foreach (var author in item.BookAuthors)
                        {
                            if (author.Id == item.Id)
                            {
                              <option selected>Select Genre</option>
                            }
                        }
                    </select>

                      <label asp-for="@item.GenreIds"></label>
                     <select asp-for="@item.GenreIds" class="form-select" asp-items="@ViewBag.Genres"   aria-label="Default select example">
                      <option selected>Select Genre</option>
                    </select>

                     <div class="form-group">
                      <label asp-for="@item.Photos"></label>
                      <input asp-for="@item.Photos" class="form-control"  placeholder="Name">
                      <span  class="text-danger" asp-validation-for="@item.Photos"></span>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-dark" asp-action="index"> go back</a>
                  </form>
                </div>
              </div>
            </div>
</div> 
}